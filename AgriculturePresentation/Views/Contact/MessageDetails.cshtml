@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detayları Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.ContactID)
                    <label for="exampleInputName1">Adı Soyadı</label>    
                    <input type="text" class="form-control" placeholder="AdSoyad" asp-for="Name">
                </div>  
                <div class="form-group">
                    <label for="exampleInputName1">Mail Adresi</label>
                    <input type="text" class="form-control" placeholder="Mail" asp-for="Mail">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Tarih</label>
                    <input type="text" class="form-control" placeholder="Tarih" asp-for="Date">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Mesaj Detayı</label>
                    <textarea class="form-control" cols="5" rows="20" placeholder="Mesaj Detay" asp-for="Message"></textarea>
                </div>
            </form>
            <a href="" onclick="history.go(-1); return false;" class="btn btn-outline-warning">Vazgeç</a>
        </div>
    </div>
</div>

