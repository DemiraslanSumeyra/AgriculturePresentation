@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.ServiceID)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control"  placeholder="Başlık" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel</label>
                    <input type="text" class="form-control"  placeholder="Görsel" asp-for="Image">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <textarea class="form-control"  rows="4" placeholder="Açıklama" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
                <a href="" onclick="history.go(-1); return false;" class="btn btn-outline-warning">Vazgeç</a>               
            </form>
        </div>
    </div>
</div>

