@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "EditTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Arkadaşı Bilgi Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.TeamID)
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                    <input type="text" class="form-control"  placeholder="AdSoyad" asp-for="PersonName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görev</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control"  placeholder="Görev" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel Yolu</label>
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                    <input type="text" class="form-control"  placeholder="Görsel yolu" asp-for="ImageURL">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Facebook</label>
                    <input type="text" class="form-control"  placeholder="Facebook linkini giriniz" asp-for="FacebookURL">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Instagram</label>
                    <input type="text" class="form-control"  placeholder="Instagram linkini giriniz" asp-for="InstagramURL">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Twitter</label>
                    <input type="text" class="form-control"  placeholder="Twitter linkini giriniz" asp-for="TwitterURL">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Web Sitesi</label>
                    <input type="text" class="form-control"  placeholder="Varsa web sitesi linkini giriniz" asp-for="WebsiteURL">
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
                <button type="submit" class="btn btn-outline-warning">Vazgeç</button>
            </form>
        </div>
    </div>
</div>

